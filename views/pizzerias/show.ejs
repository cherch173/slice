<%- include('../partials/header') %>

<section id="show-page">

    <table>
        <thead>
            <tr>
              <th style="font-size: 18px">NAME</th>
              <th style="font-size: 18px">BOROUGH</th>
              <th style="font-size: 18px">ADDRESS</th>
              <th style="font-size: 18px">VEGAN FRIENDLY?</th>
              <th style="font-size: 18px">RATING</th>
            </tr>
          </thead>

        <tbody>
            <tr>
                <td style="font-size: 16px"><%= pizzeria.name %></td>
                <td style="font-size: 16px"><%= pizzeria.borough %></td>
                <td style="font-size: 16px"><%= pizzeria.address %></td>
                <td style="font-size: 16px"><%= pizzeria.vegan ? 'Yasss' : 'Nah' %></td>
                <td style="font-size: 16px"> <%= pizzeria.rating %> </td>
            </tr>
        </tbody>
    </table>
</section>

<!-- NEW HTML STUFF for REVIEWS FORM -->
<br><br><h3>Reviews</h3>
<form id="add-review-form" method="POST"
  action="/pizzerias/<%= pizzeria._id %>/reviews">
  <label>Review:</label><br>
  <textarea name="content"></textarea><br>
  <label>Rating:</label>
  <select name="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5" selected>5</option>
  </select><br><br>
  <input type="submit" value="Add Review">
</form>

